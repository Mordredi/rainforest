<div class="search">
  <%= form_tag products_path, :method => :get, :id => 'search-form' do %>
    <%= search_field_tag :search, params[:search], :placeholder => 'Search...' %>
    <%= button_tag 'Search' %>
  <% end %>
</div>
<div id='products' class="products">
  <%= render @products %>
</div>
<%= paginate @products %>