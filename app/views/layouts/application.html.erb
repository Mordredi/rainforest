<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <p>
    <%= current_user.email %> <%= link_to "Log Out", logout_path(current_user), :method => :delete %>
    </p>
  <% else %>
    <p><%= link_to "Log In", login_path %> or <%= link_to "Sign Up", new_user_path %></p>
  <% end %>
<%= yield %>

</body>
</html>
